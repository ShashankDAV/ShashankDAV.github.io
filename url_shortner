<body>
      <h1>Short Url Maker</h1>
      <input class="inp" placeholder="Enter URL"><br>
      <button onclick="shortenUrl()">Make Short Link</button>
</body>
<script>
async function shortenUrl() {
    var url = document.querySelector(".inp").value;
    if (url==""){
          alert("Wrong url")
    }
    else{
            const res = await fetch(`https://api.shrtco.de/v2/shorten?url=${url}`);
            const data = await res.json();
            const short_link = data.result.short_link;
    
            var p = document.createElement("p");
            p.id = "url";
            p.innerHTML = short_link;
            document.querySelector("body").appendChild(p);
            document.querySelector(".inp").innerHTML = "";
}
}
</script>
